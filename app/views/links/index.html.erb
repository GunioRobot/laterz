<div id="categories">
	
	<ul id="category_list">
		<li><%= link_to "uncategorized (#{@links.count})", links_path %></li>
	<% current_user.categories.each do |category| %>
		<li id="<%= "category-#{category.id}" %>"><%= link_to "#{h(category.name)} (#{category.count})", links_path({:category_id => category.id}) %></li>
	<% end %>
	</ul>
	<div id="category_form" style="">
		<h3>add a category</h3>
		<%= render :partial => "categories/category", :locals => {:category => Category.new} %>
	</div>
	<%= link_to "add a category", new_category_path %>
</div>

<div id="links">
	<% if @category %>
		<h2>Links for <%=h @category.name %></h2>
		<%= render :partial => 'links_list', :locals => {:links => @category.links} %>
	<% else %>
		<h2>Links with no category</h2>
		<%= render :partial => 'links_list', :locals => {:links => @links} %>
	<% end %>
	
	<div id="link_form" style="">
		<h3>add a category</h3>
		<%= render :partial => "links/link", :locals => {:link => Link.new} %>
	</div>
	<%= link_to "add a link", new_link_path %>
</div>